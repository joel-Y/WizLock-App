<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wizsmith.technicianapp">

    <!-- Internet permission for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Optional: Network state check -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="WizLock Tech Admin"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Technician Dashboard -->
        <activity
            android:name=".activities.TechnicianDashboardActivity"
            android:exported="true" />

        <!-- Admin Dashboard -->
        <activity
            android:name=".activities.AdminDashboardActivity"
            android:exported="true" />

        <!-- Lock Setup -->
        <activity
            android:name=".activities.LockSetupActivity"
            android:exported="true" />

        <!-- Gateway Setup -->
        <activity
            android:name=".activities.GatewaySetupActivity"
            android:exported="true" />

        <!-- Diagnostics -->
        <activity
            android:name=".activities.DiagnosticsActivity"
            android:exported="true" />

        <!-- Service Tickets -->
        <activity
            android:name=".activities.ServiceTicketsActivity"
            android:exported="true" />

        <!-- Launcher Activity -->
        <activity android:name=".activities.TechnicianDashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
